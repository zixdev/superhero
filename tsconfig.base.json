{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@superhero/components": ["libs/components/src/index.ts"],
      "@superhero/features": ["libs/features/src/index.ts"],
      "@superhero/wallet-adapter/core/base": [
        "libs/wallet-adapter/core/base/src/index.ts"
      ],
      "@superhero/wallet-adapter/core/react": [
        "libs/wallet-adapter/core/react/src/index.ts"
      ],
      "@superhero/wallet-adapter/wallets/trust": [
        "libs/wallet-adapter/wallets/trust/src/index.ts"
      ],
      "@superhero/wallet-adapter/wallets/wallet-connect": [
        "libs/wallet-adapter/wallets/wallet-connect/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
